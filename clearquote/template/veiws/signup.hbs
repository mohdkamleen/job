<!DOCTYPE html>
<html lang="en">

<head>
    <title>Infoware {{title}}</title>
    {{>header}}
    <!-- include css files -->

    <link rel="stylesheet" href="/css/signup.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <header>

                    {{#if message}}
                    <div id="msg">
                        <i class="fa fa-times" onclick="document.getElementById('msg').style.display='none'"></i>
                        <p>{{message}}</p>
                    </div>
                    {{/if}}

                    <!-- navigation -->
                    <div class="navigation">
                        <div class="hamburger">
                            <div class=" fa fa-times ham_toggle"></div>
                        </div>
                        <nav>
                            <!-- logo -->
                            <div class="logo">
                                <h1>Clear<span>Qoute</span></h1>
                            </div>

                            <!-- menu  -->
                            <div class="nav" id="nav">
                                <ul>
                                    <li><a href="/"> Home </a></li>
                                    <li><a href="/login"> Login </a></li>
                                    <li><a class="active" href="/signup"> signup </a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>

                </header>

                <div class="baner">
                    <h2 class="main_heading">SignUp Form Here</h2>
                    <form action="/signup" method="POST">
                        <div>
                            <div class="name_feild">
                                <label for="name"> Name</label><br>
                                <input type="text" name="name" id="name"> <br>
                            </div>

                            <div class="emial_feild">
                                <label for="username">UserName</label><br>
                                <input type="text" name="username" id="username"> <br>
                            </div>

                            <div class="password_feild">
                                <label for="password">User Password</label><br>
                                <input type="password" name="password" id="password" onfocus="this.type='text'"
                                    onblur="this.type='password'"> <br>
                            </div>

                            <div class="btn_feild">
                                <button type="submit">SignUp</button>
                            </div>

                        </div>

                        <p>Already have account <a href="/login">LogIn</a></p>
                    </form>

                </div>


            </div>
        </div>
    </div>

   
    <script src="/js/nav.js"></script>
</body>

</html>