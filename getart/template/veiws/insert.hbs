<!DOCTYPE html>
<html lang="en">

<head>
    <title>GetArt {{title}}</title>
    {{>header}}
    <!-- include css files -->

    <link rel="stylesheet" href="/css/insert.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <header>

                    {{#if message}}
                    <div id="msg">
                        <i class="fa fa-times" onclick="document.getElementById('msg').style.display='none'"></i>
                        <p>{{message}}</p>
                    </div>
                    {{/if}}

                    <!-- navigation -->
                    <div class="navigation">
                        <div class="hamburger">
                            <div class=" fa fa-times ham_toggle"></div>
                        </div>
                        <nav>
                            <!-- logo -->
                            <div class="logo">
                                <h1>Get<span>Art </span><code>{{#if user}}({{user}}){{/if}}</code></h1>
                            </div>

                            <!-- menu  -->
                            <div class="nav" id="nav">
                                <ul>
                                    <li><a href="/"> Shop </a></li>
                                    <li><a href="/cart">cart</a></li>
                                    <li><a class="active" href="/admin">admin</a></li>
                                    <li><a href="/logout">logout</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>

                </header>

                <div class="baner">
                    <h2 class="main_heading">Insert Items Here</h2>
                    <div class="items">
                        <form action="/insert" method="POST" enctype="multipart/form-data">
                            <div>
                                <label for="image">Product Title</label><br>
                                <input type="text" required name="title" maxlength="60" placeholder="Enter title here">
                                <br> <br>

                                <label for="description"> Product Description </label><br>
                                <textarea type="text" placeholder="Product Description" name="description" rows="10"
                                    cols="53" maxlength="260" id="description" required></textarea> <br><br>

                                <label for="rate">Item Rate</label><br>
                                <input type="number" name="rate" id="rate" placeholder="Item rate" required> <br><br>

                                <label for="rate">Upload Media</label><br>
                                <input type="file" onchange="changePic(this)" name="product_image" id="product_image"
                                    required accept="image/*">
                                <br><br>

                                <label for="rate"> Product Variants </label><br>
                                1. <input name="variantsTxt1" class="variants" placeholder="size, color etc">
                                <label>
                                    <i class="fa fa-image"></i>
                                    <input type="file" name="variantsImg1" style="display: none;" accept="image/*"
                                        onchange="variants1(this)"><br>
                                    <img class="variantsImg" src="">
                                </label> <br>

                                2. <input name="variantsTxt2" class="variants" placeholder="size, color etc">
                                <label>
                                    <i class="fa fa-image"></i>
                                    <input type="file" name="variantsImg2" style="display: none;" accept="image/*"
                                        onchange="variants2(this)"><br>
                                    <img class="variantsImg" src="">
                                </label> <br>

                                3. <input name="variantsTxt3" class="variants" placeholder="size, color etc">
                                <label>
                                    <i class="fa fa-image"></i>
                                    <input type="file" name="variantsImg3" style="display: none;" accept="image/*"
                                        onchange="variants3(this)"><br>
                                    <img class="variantsImg" src="">
                                </label> <br>

                                4. <input name="variantsTxt4" class="variants" placeholder="size, color etc">
                                <label>
                                    <i class="fa fa-image"></i>
                                    <input type="file" name="variantsImg4" style="display: none;" accept="image/*"
                                        onchange="variants4(this)"><br>
                                    <img class="variantsImg" src="">
                                </label> <br><br>

                                <label>Product Stock Status<br>
                                    <input type="text" list="menu" required name="product_status"
                                        placeholder="Enter product status"></label>
                                <datalist id="menu">
                                    <option value="In Stock"></option>
                                    <option value="Out Of Stock"></option>
                                    <option value="Limited Stock"></option> 
                                </datalist>
                                <br> <br>

                                <div class="btn_feild">
                                    <button type="submit">Add Product</button>
                                </div>

                            </div>

                        </form> <br><br>

                    </div>
                    <div class="copyright">Copyright &copy; kamleen
                        <script>document.write(new Date().getFullYear());</script>
                    </div>
                </div>

                <script>
                    function changePic(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                document.getElementById("product_image").style.backgroundImage = "url(" + e.target.result + ")";
                            }
                            reader.readAsDataURL(input.files[0]);
                        }
                    }

                    function variants2(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                document.getElementsByClassName("variantsImg")[1].src = e.target.result;
                            }
                            reader.readAsDataURL(input.files[0]);
                        }
                    }
                    function variants3(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                document.getElementsByClassName("variantsImg")[2].src = e.target.result;
                            }
                            reader.readAsDataURL(input.files[0]);
                        }
                    }
                    function variants4(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                document.getElementsByClassName("variantsImg")[3].src = e.target.result;
                            }
                            reader.readAsDataURL(input.files[0]);
                        }
                    }
                    function variants1(input) {
                        if (input.files && input.files[0]) {
                            var reader = new FileReader();
                            reader.onload = function (e) {
                                document.getElementsByClassName("variantsImg")[0].src = e.target.result;
                            }
                            reader.readAsDataURL(input.files[0]);
                        }
                    }

                </script>
            </div>

        </div>
    </div>


    <script src="/js/nav.js"></script>
</body>

</html>