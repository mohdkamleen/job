<!DOCTYPE html>
<html lang="en">

<head>
    <title>GetArt {{title}}</title>
    {{>header}}
    <!-- include css files -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <header>


                    {{#if message}}
                    <div id="msg">
                        <i class="fa fa-times" onclick="document.getElementById('msg').style.display='none'"></i>
                        <p>{{ message}}</p>
                    </div>
                    {{/if}}


                    <!-- navigation -->
                    <div class="navigation">
                        <div class="hamburger">
                            <div class=" fa fa-times ham_toggle"></div>
                        </div>
                        <nav>
                            <!-- logo -->
                            <div class="logo">
                                <h1>Get<span>Art </span><code>{{#if user}}({{user}}){{/if}}</code></h1>
                            </div>

                            <!-- menu  -->
                            <div class="nav" id="nav">
                                <ul>

                                    {{#if user}}
                                    <li><a class="active" href="/"> Shop </a></li>
                                    <li><a href="/cart">cart</a></li>
                                    <li><a href="/admin">admin</a></li>
                                    <li><a href="/logout">logout</a></li>
                                    {{else}}
                                    <li><a class="active" href="/"> Shop </a></li>
                                    <li><a href="/login"> Login </a></li>
                                    <li><a href="/signup"> signup </a></li>
                                    {{/if}}
                                </ul>
                            </div>
                        </nav>
                    </div>

                </header>

                <div class="baner">
                    <h2 class="main_heading">Shopping Here</h2>
                    <div class="items">





                        {{#if data}}
                        {{#each data}}


                        <div class="item">

                                <div class="item_img"
                                    style="background-image: url({{this.image}}); background-size:cover;">
                                </div>


                                <div class="footer">

                                    <p id="isStock">{{this.stockStatus}}</p>

                                    <h3>{{this.title}}</h3>

                                    <div class="rate">
                                        <i>₹ 1{{this.rate}}</i> &nbsp;
                                        <span> ₹ {{this.rate}} </span>
                                    </div>

                                    <p class="description">
                                        {{this.description}}
                                    </p>


                            <form action="/updateIntoCart" method="post">
                            <input type="hidden" name="id" value="{{this.id}}">
                                    <div class="variants">

                                        <label>
                                            <div
                                                style="background-image: url({{this.image}}); background-size:100% 100%">
                                                <input type="radio" name="variant" value="golden" required>
                                                <p>golden</p>
                                            </div>
                                        </label>
                                        <label>
                                            <div
                                                style="background-image: url({{this.image}}); background-size:100% 100%">
                                                <input type="radio" name="variant" value="silver" required>
                                                <p>silver</p>
                                            </div>
                                        </label>
                                        <label>
                                            <div
                                                style="background-image: url({{this.image}}); background-size:100% 100%">
                                                <input type="radio" name="variant" value="mettel" required>
                                                <p>mettel </p>
                                            </div>
                                        </label>

                                    </div>

                                    <div class="buttons">
                                        <button class="add" type="submit">ADD TO CART</button>
                                        <button class="buy">BUY IT NOW</button>
                                    </div>
                                    
                        </form>
                                </div>
                        </div>

                        <div class="line">
                            <hr>
                            *
                            <hr>
                        </div>
                        {{/each}}
                        {{/if}}


                    </div>
                    <div class="copyright">Copyright &copy; <a href="https://mohdkamleen.blogspot.com/" target="_blank"
                            rel="noopener noreferrer">kamleen</a> 2020 -
                        <script>document.write(new Date().getFullYear());</script>
                    </div>
                </div>


            </div>
        </div>



    </div>



    <script src="/js/nav.js"></script>
</body>

</html>